<?xml version="1.0" encoding="UTF-8"?>

<ejb-jar xmlns = "http://java.sun.com/xml/ns/javaee" 
         version = "3.0" 
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd">

 <enterprise-beans> 
     <session>
         <ejb-name>UserBean</ejb-name>
  <env-entry>
        <env-entry-name>LDAP_URL</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>ldap://dns1.sapuraglobal.com:389</env-entry-value>
  </env-entry>
  <env-entry>
        <env-entry-name>LDAP_BASE</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>cn=users,dc=dns1,dc=sapuraglobal,dc=com</env-entry-value>
  </env-entry>
     </session>    
 </enterprise-beans>      
        
</ejb-jar>
